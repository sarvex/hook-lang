// bubble_sort.hk
//

fn sort(mut arr) {
  mut n = len(arr);
  mut has_changed;
  do {
    has_changed = false;
    n--;
    mut i = 0;
    while (i < n) {
      if (arr[i] > arr[i + 1]) {
        val t = arr[i];
        arr[i] = arr[i + 1];
        arr[i + 1] = t;
        has_changed = true;
      }
      i++;
    }
  } while (has_changed);
  return arr;
}

println(sort([5, 2, 7, 3, 0, 1, 4, 6]));
